import { Expose, Transform, Type } from 'class-transformer';
import { IsString, IsNumber, IsBoolean } from 'class-validator';

class ConfigSchema {
    @IsString()
    @Expose()
    @Type(() => String)
    NAME: string;
    @IsString()
    @Expose()
    @Type(() => String)
    VERSION: string;
    @IsNumber()
    @Expose()
    @Type(() => Number)
    PORT: number;
    @IsString()
    @Expose()
    @Type(() => String)
    HOST: string;
    @IsString()
    @Expose()
    @Type(() => String)
    API_PREFIX: string;
    @IsString()
    @Expose()
    @Type(() => String)
    DATABASE_URL: string;
}

export default ConfigSchema; 