{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@features/*": [
        "src/api/features/*"
      ],
      "@base/*": [
        "src/*"
      ],
      "@api/*": [
        "src/api/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}