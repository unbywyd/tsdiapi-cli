import { Expose, Transform, Type } from 'class-transformer';
import { IsString, IsNumber, IsBoolean } from 'class-validator';

class ConfigSchema {
    @IsString()
    @Expose()
    @Type(() => String)
    NAME: {{name}};

    @IsString()
    @Expose()
    @Type(() => String)
    VERSION: {{version}};

    @IsNumber()
    @Expose()
    @Type(() => Number)
    PORT: number;

    @IsString()
    @Expose()
    @Type(() => String)
    HOST: string;

    @IsString()
    @Expose()
    @Type(() => String)
    API_PREFIX: string;

    @IsString()
    @Expose()
    @Type(() => String)
    DATABASE_URL: string;
}

export default ConfigSchema; 