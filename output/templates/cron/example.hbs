import { CronTask } from "@tsdiapi/cron";
import { Service } from "typedi";

@Service()
export class HelloCronController {
  @CronTask("*/5 * * * * *", {
    name: "Say Hello",
    description: "This task will say hello every 5 seconds",
  }) // Every 5 seconds
  async helloWorld() {
    console.log(`Hello World!, ${new Date().toISOString()}`);
  }
}